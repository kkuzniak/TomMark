Options +SymLinksIfOwnerMatch 
RewriteEngine On 
RewriteCond %{REQUEST_FILENAME} !-f 
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

RewriteRule ^contact$ contact.html
RewriteRule ^about$ about.html

RewriteRule ^home$ index.html
RewriteRule ^work/weronika-surdacka$ work_1.html
RewriteRule ^work/royal-star$ work_2.html
RewriteRule ^work/frontline-club$ work_3.html
RewriteRule ^work/pina-colada$ work_4.html
RewriteRule ^work/weronika-surdacka/preview$ weronika_surdacka.html
RewriteRule ^work/royal-star/preview$ royal_star.html
RewriteRule ^work/frontline-club/preview$ frontline_club.html
RewriteRule ^work/pina-colada/preview$ pina_colada.html

DirectoryIndex /home